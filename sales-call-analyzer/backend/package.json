{
  "name": "sales-call-analyzer-backend",
  "version": "1.0.0",
  "description": "Backend API for AffiliateFinder.ai Sales Call Analysis System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test:tooltips": "node scripts/test-tooltip-coverage.js",
    "migrate:postgres": "node scripts/migrate-to-postgres.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.17.2",
    "sql.js": "^1.10.2",
    "stripe": "^20.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "services/**/*.js",
      "routes/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
